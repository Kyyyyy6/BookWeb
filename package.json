{
  "name": "literaverse",
  "version": "3.0.0",
  "description": "Premium Digital Book Reading Platform",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000 --host=localhost",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss styles.css -o dist/styles.min.css --env production",
    "build:js": "esbuild script.js --bundle --minify --outfile=dist/script.min.js",
    "dev": "npm run build && concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm start\"",
    "watch:css": "postcss styles.css -o dist/styles.min.css --watch",
    "watch:js": "esbuild script.js --bundle --outfile=dist/script.min.js --watch",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "deploy": "npm run build && firebase deploy"
  },
  "dependencies": {
    "bootstrap": "^5.3.0",
    "chart.js": "^4.3.0",
    "choices.js": "^10.2.0",
    "swiper": "^10.0.4",
    "toastify-js": "^1.12.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "esbuild": "^0.18.0",
    "eslint": "^8.43.0",
    "jest": "^29.5.0",
    "live-server": "^1.2.2",
    "postcss": "^8.4.24",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^8.3.0",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2"
  },
  "keywords": [
    "ebook",
    "digital-books",
    "reading-platform",
    "literature",
    "education"
  ],
  "author": "LiteraVerse Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/literaverse/platform.git"
  },
  "bugs": {
    "url": "https://github.com/literaverse/platform/issues"
  },
  "homepage": "https://literaverse.com"
}